<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tomas.motionmedia.MainActivityFragment"
    >


    <TextView
        android:text="00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/timeText1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/timeText2" />

    <Button
        android:text="next"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/nextButton"
        tools:background="@android:color/darker_gray"
        android:textSize="10sp"
         />

    <Button
        android:text="previous"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:id="@+id/prevButton"
        tools:background="@android:color/darker_gray"
        android:textSize="10sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeText1"
        android:layout_above="@+id/prevButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp" />

    <TextView
        android:text="song name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/timeText2"
        android:id="@+id/songNameText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:lines="1" />

    <TextView
        android:text="artsit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/songNameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/artistTextView" />

    <TextView
        android:text="album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/artistTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/albumTextView" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/playButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/songSeekBar"
        android:clickable="false" />

    <Button
        android:text="random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/randomButton"
        tools:background="@android:color/darker_gray"
        android:layout_below="@+id/repeatButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp" />

    <Button
        android:text="songs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trackListButton"
        tools:background="@android:color/darker_gray"
        android:layout_below="@+id/randomButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp" />

    <Button
        android:text="repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/repeatButton"
        tools:background="@android:color/darker_gray"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="37dp" />

    <ImageView
        app:srcCompat="@android:drawable/ic_btn_speak_now"
        android:id="@+id/imageView"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginTop="15dp"
        android:layout_alignTop="@+id/repeatButton"
        android:layout_toLeftOf="@+id/playButton"
        android:layout_toStartOf="@+id/playButton"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="100dp"
        tools:layout_alignTop="@+id/repeatButton" />

    <Button
        android:text="play"
        android:layout_height="80px"
        android:id="@+id/playButton"
        tools:background="@android:color/darker_gray"
        android:textSize="10sp"
        android:layout_width="110px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
